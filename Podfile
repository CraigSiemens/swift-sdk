use_frameworks!

def commonPods
    pod 'Version', '0.7.1'
end

target 'ConfigCat iOS' do
    platform :ios, '10.0'
    commonPods
end
target 'ConfigCat iOSTests' do
    platform :ios, '10.0'
    commonPods
end
target 'ConfigCat macOS' do
    platform :osx, '10.12'
    commonPods
end
target 'ConfigCat macOSTests' do
    platform :osx, '10.12'
    commonPods
end
target 'ConfigCat tvOS' do
    platform :tvos, '10.0'
    commonPods
end
target 'ConfigCat tvOSTests' do
    platform :tvos, '10.0'
    commonPods
end
target 'ConfigCat watchOS' do
    platform :watchos, '3.0'
    commonPods
end
